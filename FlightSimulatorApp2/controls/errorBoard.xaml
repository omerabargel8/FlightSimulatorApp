<UserControl x:Class="FlightSimulatorApp2.controls.errorBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp2.controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" Width="740.742">
    <Grid>
        <Label Content="{Binding VM_errors}" HorizontalAlignment="Left" Height="35" Margin="10,5,0,0" VerticalAlignment="Top" Width="790" FontWeight="Bold" FontSize="22" FontFamily="Sylfaen" Foreground="Red"/>
        <Label Content="{Binding VM_status}" HorizontalAlignment="Left" Height="35" Margin="10,55,0,0" VerticalAlignment="Top" Width="790" FontWeight="Bold" FontSize="22" FontFamily="Sylfaen"/>
        <Border BorderBrush="Black" BorderThickness="1">
        </Border>
    </Grid>
</UserControl>
